<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/viewLayoutBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        />

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/lets_get_acquainted"
        android:textColor="@color/white_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_huge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/viewLayoutBg"
        app:layout_constraintTop_toTopOf="@+id/viewLayoutBg"/>

    <TextView
        android:id="@+id/textFillProfileHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/fill_out_the_profile_and_go_to_the_application"
        android:textColor="@color/white_text"
        android:textFontWeight="400"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="@+id/viewLayoutBg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintVertical_bias="0.016" />

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:buttonTint="@color/white_text"
        android:fontFamily="@font/open_sans"
        android:text="@string/remember_me"
        android:textColor="@color/gray_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_medium"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/e_mail"
        android:textColor="@color/gray_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/emailInputLayout"
        app:layout_constraintStart_toStartOf="@+id/emailInputLayout" />

    <TextView
        android:id="@+id/textPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/password"
        android:textColor="@color/gray_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/passwordInputLayout"
        app:layout_constraintStart_toStartOf="@+id/passwordInputLayout" />

    <Button
        android:id="@+id/buttonGoogleSignUp"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_rounded"
        android:text="@string/google"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_big"
        android:fontFamily="@font/open_sans"
        android:theme="@style/ButtonGoogleStyle"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRememberMe"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_button_rounded_border"
        android:fontFamily="@font/open_sans"
        android:text="@string/register"
        android:textColor="@color/white_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_big"
        android:theme="@style/ButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOr"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/textOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/or"
        android:textColor="@color/white_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_bigger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoogleSignUp"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textAboutTerms"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:text="@string/by_clicking_register_you_agree_to_our_terms_and_conditions"
        android:textColor="@color/white_text"
        android:textFontWeight="400"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        app:layout_constraintVertical_bias="0.274" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAboutTerms"
        app:layout_constraintVertical_bias="0.23">

        <TextView
            android:id="@+id/textHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/already_have_an_account"
            android:textColor="@color/white_text"
            android:textFontWeight="400"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:fontFamily="@font/open_sans"
            android:paddingLeft="4dp"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        style="@style/TextInputStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="@+id/viewLayoutBg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/viewLayoutBg"

        app:layout_constraintTop_toBottomOf="@+id/textFillProfileHint"
        app:layout_constraintVertical_bias="0.1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailTextInput"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:lines="1"
            android:textColor="@color/white_text"
            android:layout_width="374dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        style="@style/TextInputStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="@+id/viewLayoutBg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/viewLayoutBg"
        app:layout_constraintTop_toBottomOf="@+id/emailInputLayout"
        app:layout_constraintVertical_bias="0.08">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordTextInput"
            android:textColor="@color/white_text"
            android:imeOptions="actionDone"
            android:layout_width="374dp"
            android:inputType="textPassword"
            android:lines="1"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
