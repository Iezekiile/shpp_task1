<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewLayoutBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textFillProfileHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/fill_out_the_profile_and_go_to_the_application"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_regular"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="@+id/viewLayoutBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintVertical_bias="0.016"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/lets_get_acquainted"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_huge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/viewLayoutBg"
        app:layout_constraintTop_toTopOf="@+id/viewLayoutBg"
        app:layout_constraintVertical_bias="0.18"
        />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="374dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/white_text"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:inputType="textEmailAddress"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_bigger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345"
         />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="374dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/white_text"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewLayoutBg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="134dp"
        android:layout_height="34dp"
        android:buttonTint="@color/white_text"
        android:fontFamily="@font/open_sans"
        android:text="@string/remember_me"
        android:textColor="@color/gray_text"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/e_mail"
        android:textColor="@color/gray_text3"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress" />

    <TextView
        android:id="@+id/textPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/password"
        android:textColor="@color/gray_text3"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword" />

    <Button
        android:id="@+id/buttonGoogleSignUp"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:background="@drawable/button_bg_2"
        android:text="@string/google"
        android:textColor="@color/black"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_big"
        android:theme="@style/ButtonGoogleStyle"
        app:iconTint="@null"
        app:iconTintMode="multiply"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="@+id/viewLayoutBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRememberMe"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:background="@drawable/button_bg_1"
        android:fontFamily="@font/open_sans"
        android:text="@string/register"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_big"
        android:theme="@style/ButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOr"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/textOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/or"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_bold"
        android:textSize="@dimen/font_size_bigger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoogleSignUp"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textAboutTerms"
        android:layout_width="262dp"
        android:layout_height="34dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:text="@string/by_clicking_register_you_agree_to_our_terms_and_conditions"
        android:textColor="@color/white_text"
        android:textFontWeight="@dimen/font_weight_regular"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        app:layout_constraintVertical_bias="0.274" />

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="25dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAboutTerms"
        app:layout_constraintVertical_bias="0.23">

        <TextView
            android:id="@+id/textHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/already_have_an_account"
            android:textColor="@color/white_text"
            android:textFontWeight="@dimen/font_weight_regular"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:fontFamily="@font/open_sans"
            android:paddingLeft="4dp"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textFontWeight="@dimen/font_weight_bold"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>