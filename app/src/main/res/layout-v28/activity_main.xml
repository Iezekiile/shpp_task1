<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/bottomBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/topBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:background="@drawable/avatar_billy"
        android:contentDescription="@string/profile_avatar"
        android:foreground="@drawable/fg_rouded_imageview"
        app:layout_constraintBottom_toBottomOf="@+id/topBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBg"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/settings"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_size_huge"
        app:layout_constraintBottom_toBottomOf="@id/topBg"
        app:layout_constraintEnd_toEndOf="@id/topBg"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="@id/topBg"
        app:layout_constraintTop_toTopOf="@id/topBg"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/full_name"
        android:textColor="@color/white_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_bigger"
        app:layout_constraintBottom_toTopOf="@+id/bottomBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/career"
        android:textColor="@color/gray_text"
        android:textFontWeight="600"
        app:layout_constraintBottom_toTopOf="@+id/bottomBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/homeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/home_address"
        android:textColor="@color/gray_text"
        android:textFontWeight="600"
        app:layout_constraintBottom_toTopOf="@+id/bottomBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/career"
        app:layout_constraintVertical_bias="0.283" />

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_rounded_border"
        android:fontFamily="@font/open_sans"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/contactsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomBg"
        app:layout_constraintVertical_bias="0.950"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_button_rounded"
        android:fontFamily="@font/open_sans"
        android:text="@string/view_my_contacts"
        android:textColor="@color/white_text"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_big"
        android:theme="@style/ButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomBg"
        app:layout_constraintVertical_bias="0.945" />

    <TextView
        android:id="@+id/fillProfileTextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/go_to_settings_and_fill_out_the_profile"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/editProfileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomBg"
        app:layout_constraintVertical_bias="0.950" />

    <ImageButton
        android:id="@+id/facebookButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linkedinButton"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomBg"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/linkedinButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_linkedin"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBg"
        app:layout_constraintEnd_toStartOf="@id/instagramButton"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/facebookButton"
        app:layout_constraintTop_toBottomOf="@+id/topBg"
        app:layout_constraintVertical_bias="0.238"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/instagramButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_instagram"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/linkedinButton"
        app:layout_constraintTop_toBottomOf="@+id/topBg"
        app:layout_constraintVertical_bias="0.238"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>