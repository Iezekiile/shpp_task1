<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white_text</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorTertiary">@color/white_text</item>
        <item name="colorOnTertiary">@color/gray_text</item>
        <item name="colorError">@color/red_error</item>
    </style>
</resources>